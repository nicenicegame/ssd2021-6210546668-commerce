<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Stock:</strong>
  <%= @product.stock %>
</p>

<p>
  <strong>Stock:</strong>
  <% @product.product_categories.each do |pc| %>
    <%= Category.find(pc.category.id).name %>
  <% end %>
</p>

<br>

<%= link_to 'Edit', edit_product_path(@product), class: 'button is-success is-outlined mr-3' %>
<%= link_to 'Back', products_path, class: 'button is-danger is-outlined' %>
