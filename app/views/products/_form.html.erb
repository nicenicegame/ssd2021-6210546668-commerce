<div class="my-5">
  <%= form_with(model: product) do |form| %>
    <% if product.errors.any? %>
      <div class="notification is-danger is-light" id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
          <% product.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :title, class: 'label' %>
      <div class="control">
        <%= form.text_field :title, class: 'input' %>
      </div>
    </div>

    <div class="field">
      <%= form.label :description, class: 'label' %>
      <div class="control">
        <%= form.text_area :description, class: 'textarea' %>
      </div>
    </div>

    <div class="field">
      <%= form.label :stock, class: 'label' %>
      <%= form.number_field :stock, class: 'input' %>
    </div>

    <%= fields_for @product_category do |pc| %>
      <div class="field">
        <%= pc.label 'All Categories', class: 'label' %><br />
        <%= collection_select(:categories, :id, Category.all, :id, :name, {}, { multiple: true }) %>
      </div>
    <% end %>

    <div class="action">
      <%= form.submit 'Submit', class: 'button is-primary is-outlined' %>
    </div>
  <% end %>
</div>