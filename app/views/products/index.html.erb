<h1 class="is-size-2 has-text-weight-bold mb-2">Products</h1>

<table class="table is-hoverable">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.stock %></td>
        <td>
          <%= link_to product, class: 'button is-small is-info is-outlined' do %>
            <i class="i fas fa-eye"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_product_path(product), class: 'button is-small is-success is-outlined' do %>
            <i class="i fas fa-pen"></i>
          <% end %>
        </td>
        <td>
          <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-small is-danger is-outlined' do %>
            <i class="i fas fa-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Product', new_product_path, class: 'button is-link is-outlined' %>
