<div class="is-flex is-justify-content-space-between is-align-items-center">
  <h1 class="is-size-2 has-text-weight-bold mb-2">Products</h1>
  <div>
    <%= link_to new_product_path, class: 'button is-link is-outlined mr-1' do %>
      New Product<i class="fas fa-plus-circle ml-1"></i>
    <% end %>
    <%= link_to products_path(format: :csv), class: 'button is-success is-outlined' do %>
      Download CSV<i class="fas fa-download ml-1"></i>
    <% end %>
  </div>
</div>

<div class="table-container">
  <table class="table is-hoverable">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Stock</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= product.stock %></td>
          <td>
            <%= product.categories.empty? ? 'NA' : product.categories.map(&:name).join(', ') %>
          </td>
          <td><%= product.status.humanize %></td>
          <td>
            <%= link_to product, class: 'button is-small is-info is-outlined' do %>
              <i class="i fas fa-eye"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_product_path(product), class: 'button is-small is-success is-outlined' do %>
              <i class="i fas fa-pen"></i>
            <% end %>
          </td>
          <td>
            <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-small is-danger is-outlined' do %>
              <i class="i fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= form_tag products_csv_upload_path, multipart: true do %>
  <div id="file-js-example" class="file has-name is-link">
    <label class="file-label">
      <%= file_field_tag :csv_file, class: 'file-input' %>
      <span class="file-cta">
        <span class="file-icon">
          <i class="fas fa-upload"></i>
        </span>
        <span class="file-label">
          Choose a fileâ€¦
        </span>
      </span>
      <span class="file-name">
        No file uploaded
      </span>
    </label>
  </div>
  <%= submit_tag :upload, class: 'button is-success mt-3' %>
<% end %>