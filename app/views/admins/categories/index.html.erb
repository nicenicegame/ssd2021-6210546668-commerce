<div class="is-flex is-justify-content-space-between is-align-items-center">
  <h1 class="is-size-2 has-text-weight-bold mb-2">Categories</h1>
  <%= link_to '+ New Categories', new_admins_category_path, class: 'button is-link is-outlined' %>
</div>

<div class="table-container">
  <table class="table is-hoverable is-fullwidth">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td>
            <%= link_to admins_category_path(category), class: 'button is-small is-info is-outlined' do %>
              <i class="i fas fa-eye"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_admins_category_path(category), class: 'button is-small is-success is-outlined' do %>
              <i class="i fas fa-pen"></i>
            <% end %>
          </td>
          <td>
            <%= link_to admins_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button is-small is-danger is-outlined' do %>
              <i class="i fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

